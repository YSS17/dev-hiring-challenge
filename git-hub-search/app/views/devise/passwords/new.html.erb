<div class="container" cz-shortcut-listen="true" style="align-items: center; padding: 100px 200px 200px 200px;">

  <h2>Forgot your <strong style="color: #f18b3b;">Password</strong>?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-signin">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send me reset password instructions", class:"btn btn-lg btn-primary btn-block mb-3"   %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
