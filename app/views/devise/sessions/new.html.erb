<div class="container" cz-shortcut-listen="true" style="align-items: center; padding: 100px 200px 200px 200px;">
  <h2>Log in to <strong style="color: #f18b3b;">GitHubSearchÂ®</strong></h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-signin">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, class: "form-control"  %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, class: "form-control" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"btn btn-lg btn-primary btn-block mb-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>


